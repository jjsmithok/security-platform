{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "./dist",
    "outDir": "rootDir": "./.",
    "baseUrl": ".",
    "paths": {
      "@openclaw/db": ["./packages/db"],
      "@openclaw/shared": ["./packages/shared"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
